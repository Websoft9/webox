# EditorConfig 配置文件
# 统一不同编辑器的代码格式
# https://editorconfig.org/

root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go 源代码文件
[*.go]
indent_style = tab
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2

# Docker 文件
[Dockerfile*]
indent_style = space
indent_size = 2

# 配置文件
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# SQL 文件
[*.sql]
indent_style = space
indent_size = 2

# 前端文件（预留）
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

[*.{html,htm,vue}]
indent_style = space
indent_size = 2